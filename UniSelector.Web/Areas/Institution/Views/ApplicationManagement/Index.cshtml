@model List<Application>

<div class="container" style="margin-top: 6rem;">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Application Requests</h2>
                </div>
            </div>
        </div>
        <div class="card-body" style="padding:20px">
            <table id="datatable" class="table table-hover table-striped table-bordered" style="width:100%">
                <thead class="thead-dark text-light">
                    <tr>
                        <th>Student Name</th>
                        <th>Faculty</th>
                        <th>Major</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.User?.Name</td>
                            <td>@obj.Faculty?.StandardFaculty?.CombinedName</td>
                            <td>@obj.Major?.StandardMajor?.CombinedName</td>
                            <td>@obj.ApplicationDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge bg-@(obj.Response == "Pending" ? "warning" :
                                      obj.Response == "Accepted" ? "success" : "danger")">
                                    @obj.Response
                                </span>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm"
                                   asp-action="Details"
                                   asp-route-id="@obj.Id">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dataTable.js"></script>
}