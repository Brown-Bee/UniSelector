@model List<Faculty>
<div class="pt-5 m-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Faculty List</h2>
                </div>
            </div>
        </div>
        <div class="card-body" style="padding:20px">
            <div class="row pb-3">
                <div class="col-6"></div>
                <div class="col-6 text-end">
                    <a asp-controller="Faculty" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add new faculty
                    </a>
                </div>
            </div>
            <table class="table table-hover table-striped table-bordered display" style="width:100%">
                <thead class="thead-dark text-light">
                    <tr>
                        <th>Name</th>
                        <th>University</th>
                        <th>Overview</th>  
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        
                        <tr>
                            <td>@(obj.StandardFaculty?.CombinedName)</td>
                            <td>@obj.University?.Name</td>
                            <td>@(obj.Description?.Length > 50 ? obj.Description.Substring(0, 47) + "..." : obj.Description)</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Major" asp-action="Index" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Majors
                                    </a>
                                    <a asp-controller="Faculty" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Faculty" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>