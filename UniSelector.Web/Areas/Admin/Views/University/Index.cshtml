@model List<University>

<div class="p-5 m-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">University Management</h2>
                </div>
            </div>
        </div>
        
        <!-- Filters Panel -->
        <div class="card-body filters-section">
            <div class="filters-toggle mb-3">
                <button class="btn btn-outline-secondary w-100 text-start" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#filtersPanel">
                    <i class="bi bi-funnel me-2"></i>Show Filters
                    <i class="bi bi-chevron-down float-end mt-1"></i>
                </button>
            </div>

            <div class="collapse" id="filtersPanel">
                <div class="card card-body bg-light">
                    <div class="row g-3">
                        <!-- Text Filters -->
                        <div class="col-md-4">
                            <label class="form-label">University Name</label>
                            <input type="text" class="form-control filter-input" data-column="name">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Type</label>
                            <select class="form-select filter-input" data-column="type">
                                <option value="">All</option>
                                <option value="Public">Public</option>
                                <option value="Private">Private</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Location</label>
                            <input type="text" class="form-control filter-input" data-column="location">
                        </div>

                        <!-- Range Filter -->
                        <div class="col-md-6">
                            <label class="form-label">Kuwait Rank Range</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="rankMin" placeholder="Min" min="1">
                                <span class="input-group-text">to</span>
                                <input type="number" class="form-control" id="rankMax" placeholder="Max" min="1">
                            </div>
                        </div>

                        <!-- Budget Range -->
                        <div class="col-md-6">
                            <label class="form-label">Budget Range</label>
                            <div class="input-group">
                                <input type="number" class="form-control" id="budgetMin" placeholder="Min">
                                <span class="input-group-text">to</span>
                                <input type="number" class="form-control" id="budgetMax" placeholder="Max">
                            </div>
                        </div>

                        <!-- Filter Actions -->
                        <div class="col-12">
                            <button class="btn btn-primary me-2" id="applyFilters">
                                <i class="bi bi-check2-circle me-2"></i>Apply Filters
                            </button>
                            <button class="btn btn-outline-secondary" id="clearFilters">
                                <i class="bi bi-x-circle me-2"></i>Clear Filters
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row pb-3">
                <div class="col-6">
                    <div class="d-flex align-items-center">
                        <label class="me-2">Show</label>
                        <select class="form-select form-select-sm w-auto" id="entriesPerPage">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        <label class="ms-2">entries</label>
                    </div>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="University" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New University
                    </a>
                </div>
            </div>

            <table id="tblUniversity" class="table table-hover table-striped table-bordered display" style="width:100%">
                <thead class="thead-dark text-light">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Location</th>
                        <th>Rank In Kuwait</th>
                        <th>Budget</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Styles {
        <link rel="stylesheet" href="~/css/universityManagement.css" />
}

@section Scripts {
        <script src="~/js/universityManagement.js"></script>
}