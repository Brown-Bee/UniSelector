@model University

<div class="container" style="margin-top: 6rem;">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create") University</h2>
            </div>
        </div>
    </div>
    <form method="post" class="bg-light p-3" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <input asp-for="Id" hidden />
        <input asp-for="ImageUrl" hidden />

        <div class="row">
            <div class="col-md-12">
                <!-- First Row: Name, Phone, Type -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">University Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" type="number" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="type" class="form-label">Type</label>
                            <select asp-for="type" class="form-control">
                                <option value="Private">Private</option>
                                <option value="Public">Public</option>
                            </select>
                            <span asp-validation-for="type" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Second Row: Email, Main Image Upload -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Main Image</label>
                            <input type="file" name="file" class="form-control" />
                        </div>
                    </div>
                </div>

                <!-- Third Row: Full Description -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="FullDescription" class="form-label">Full Description</label>
                            <textarea asp-for="FullDescription" class="form-control" rows="6"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Fourth Row: Small Description -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="SmallDescription" class="form-label">Small Description</label>
                            <input asp-for="SmallDescription" class="form-control" rows="3"></input>
                            <span asp-validation-for="SmallDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Fifth Row: Location, Rank -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="location" class="form-label">Location</label>
                            <input asp-for="location" class="form-control" />
                            <span asp-validation-for="location" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="KuwaitRank" class="form-label">Kuwait Rank</label>
                            <input asp-for="KuwaitRank" class="form-control" type="number" />
                            <span asp-validation-for="KuwaitRank" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Id == 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="University" asp-action="Index" class="btn btn-outline-primary form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: ['anchor', 'autolink', 'charmap', 'codesample', 'lists', 'searchreplace', 'visualblocks', 'wordcount'],
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | removeformat',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject('See docs to implement AI Assistant')),
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}