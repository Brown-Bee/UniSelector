@model MajorVM

<div class="container" style="margin-top: 6rem;">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Major.Id != 0 ? "Update" : "Create") Major</h2>
            </div>
        </div>
    </div>
    <form method="post" class="bg-light p-3" asp-action="Upsert">
        <input asp-for="Major.Id" hidden/>
        <input asp-for="Major.FacultyId" hidden/>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Major.StandardMajorId" class="form-label">Standard Major</label>
                    <select class="form-control" asp-for="Major.StandardMajorId" asp-items="Model.StandardMajors" id="standardMajorSelect">
                        <option value="" selected>--Select Standard Major--</option>
                    </select>
                    <span asp-validation-for="Major.StandardMajorId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Major.AveragePrice">Avarage</label>
                    <input asp-for="Major.AveragePrice" class="form-control"/>
                    <span asp-validation-for="Major.AveragePrice" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Major.Credits"></label>
                    <input asp-for="Major.Credits" class="form-control"/>
                    <span asp-validation-for="Major.Credits" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Major.MinimumGrade">Minimum Grade (%)</label>
                    <input asp-for="Major.MinimumGrade" class="form-control"/>
                    <span asp-validation-for="Major.MinimumGrade" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row ">
            <div class="col-6 col-md-3">
                @if (Model.Major.Id == 0)
                {
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }

            </div>
            <div class=" col-6 col-md-3">
                <a asp-controller="Major" asp-action="Index" class="btn btn-outline-primary form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>

<div class="p-4" style="margin-top: 3rem;">
    <div class="card shadow border-0 mt-4">
        @*<div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Major List</h2>
                </div>
            </div>
        </div>*@
        <div class="card-body" style="padding:20px">
            @*<div class="row pb-3">
                <div class="col-6"></div>
                <div class="col-6 text-end">
                    <a asp-controller="Major" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add new major
                    </a>
                </div>
            </div>*@
            <table class="table table-hover table-striped table-bordered display" style="width:100%">
                <thead class="thead-dark text-light">
                <tr>
                    <th>Name</th>
                    <th>Faculty</th>
                    <th>AveragePrice</th>
                    <th>Credits</th>
                    <th>Minimum Grade</th> @*Added for admission requirements*@
                    <th>Market Demand</th> @*Added job market info*@
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model.Majors)
                {
                    <tr>
                        <td>@(obj.StandardMajor?.CombinedName)</td>
                        <td>@(obj.Faculty?.StandardFaculty?.CombinedName)</td>
                        <td>@obj.Credits</td>
                        <td>@obj.AveragePrice.ToString("c")</td>
                        <td>@obj.MinimumGrade%</td>
                        <td>@obj.(GetMarketDemandText(obj.MarketDemand))</td>
                        <td></td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Major" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Major" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {

    private string GetMarketDemandText(int demand)
    {
        return demand switch
        {
            1 => "Very Low",
            2 => "Low",
            3 => "Medium",
            4 => "High",
            5 => "Very High",
            _ => "N/A"
        };
    }

}


@section Scripts {
    <script src="~/js/GetMajors.js"></script>
    <partial name="_ValidationScriptsPartial"/>
}