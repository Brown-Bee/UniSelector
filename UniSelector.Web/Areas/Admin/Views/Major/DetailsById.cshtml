@model Major

<div class="container" style="margin-top: 6rem;">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@Model.Faculty!.StandardFaculty!.CombinedName</h2>
            </div>
        </div>
    </div>
    <form method="post" class="bg-light p-3" asp-action="Upsert">
        <input asp-for="Id" hidden/>
        <input asp-for="FacultyId" hidden/>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="majorName" class="form-label">Standard Major</label>
                    <input value="@Model.StandardMajor!.CombinedName" type="text" id="majorName" readonly>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AveragePrice">Average</label>
                    <input asp-for="AveragePrice" class="form-control"/>
                    <span asp-validation-for="AveragePrice" class="text-danger" readonly></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Credits"></label>
                    <input asp-for="Credits" class="form-control"/>
                    <span asp-validation-for="Credits" class="text-danger" readonly></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="MinimumGrade">Minimum Grade (%)</label>
                    <input asp-for="MinimumGrade" class="form-control" readonly/>
                    <span asp-validation-for="MinimumGrade" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="MinimumIELTS">Minimum IELTS</label>
                    <input asp-for="MinimumIELTS" class="form-control" readonly/>
                    <span asp-validation-for="MinimumIELTS" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="MinimumTOEFL">Minimum TOEFL</label>
                    <input asp-for="MinimumTOEFL" class="form-control" readonly/>
                    <span asp-validation-for="MinimumTOEFL" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="AverageStartingSalary">Average Starting Salary</label>
                    <input asp-for="AverageStartingSalary" class="form-control" readonly/>
                    <span asp-validation-for="AverageStartingSalary" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="MinimumTOEFL">Minimum TOEFL</label>
                    <input asp-for="MinimumTOEFL" class="form-control" readonly/>
                    <span asp-validation-for="MinimumTOEFL" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="RequiresAptitudeTest">Requires Aptitude Test: </label>
                    <input @(Model.RequiresAptitudeTest ? "checked" : "") type="radio" value="Mandatory">  
                    <input @(!Model.RequiresAptitudeTest ? "checked" : "") type="radio" value="No need ">  
                    <span asp-validation-for="MinimumGrade" class="text-danger"></span>
                </div>
            </div>
            
        </div>
        <div class="row ">
            <div class="col-6 col-md-3">
                    <a asp-controller="Major" asp-action="GetMajorId" asp-route-facultyId="@Model.FacultyId" class="btn btn-primary form-control">Back</a>
            </div>
        </div>
    </form>
</div>
