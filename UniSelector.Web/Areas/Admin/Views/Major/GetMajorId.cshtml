@model List<Major>
<div class="p-4 m-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Major List</h2>
                </div>
            </div>
        </div>
        <div class="card-body" style="padding:20px">
            <div class="row pb-3">
                <div class="col-6"></div>
            </div>
            <table class="table table-hover table-striped table-bordered display" style="width:100%">
                <thead class="thead-dark text-light">
                <tr>
                    <th>Name</th>
                    <th>Faculty</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@(obj.StandardMajor?.CombinedName)</td>
                            <td>@(obj.Faculty?.StandardFaculty?.CombinedName)</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Major" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Apply
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    
}