@model List<Major>
<div class="p-5 m-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Major List</h2>
                </div>
            </div>
        </div>
        <div class="card-body" style="padding:20px">
            <div class="row pb-3">
                <div class="col-6"></div>
            </div>
            <table id="datatable" class="table table-hover table-striped table-bordered display" style="width:100%">
                <thead class="thead-dark text-light">
                    <tr>
                        <th>Name</th>
                        <th>Credits</th>
                        <th>AveragePrice</th>
                        <th>MinimumGrade</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.StandardMajor?.CombinedName</td>
                            <td>@obj.Credits</td>
                            <td>@obj.AveragePrice</td>
                            <td>@obj.MinimumGrade</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    @* <a asp-area="User" asp-controller="Application" asp-action="Apply"
                                       
                                       asp-route-uniEmail="@obj.Faculty!.University!.Email"
                                       asp-route-universityId="@obj.Faculty!.UniversityId"
                                       asp-route-facultyId="@obj.Faculty.Id"
                                       asp-route-majorId="@obj.Id"
                                       class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Apply
                                    </a> *@
                                    <a asp-action="DetailsById" asp-route-majorId="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i> Details
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Here the button doesn't work becuase I don't know how to get the universityId -->
            
            <a asp-area="User" 
                asp-controller="Home" 
                asp-action="UniDetails"
                asp-route-universityId="@ViewBag.UniId" 
                class="btn btn-outline-primary col-3 mt-3 ">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dataTable.js"></script>

}