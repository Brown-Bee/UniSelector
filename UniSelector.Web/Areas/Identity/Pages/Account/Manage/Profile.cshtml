@page
@using UniSelector.Web.Areas.Identity.Pages.Account.Manage
@model ProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActivePage"] = ManageNavPages.Profile;
}

<div class="container">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient ml-0 py-2">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Edit Profile</h2>
                </div>
            </div>
        </div>
        <div class="card-body bg-light p-4">
            <div class="row">
                <!-- Form Content -->
                <div class="col-md-12">
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!-- Civil ID Details -->
                        <div class="section-container">
                            <h5 class="section-title">Civil ID Information</h5>
                            <div class="row">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.CivilID" class="form-label"></label>
                                            <input asp-for="Input.CivilID" class="form-control" />
                                            <span asp-validation-for="Input.CivilID" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.CivilIDExpiryDate" class="form-label"></label>
                                            <input asp-for="Input.CivilIDExpiryDate" class="form-control" type="date" />
                                            <span asp-validation-for="Input.CivilIDExpiryDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Personal Information -->
                        <div class="section-container">
                            <h5 class="section-title">Personal Information</h5>
                            <div class="row">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.Name" class="form-label">Full Name</label>
                                            <input asp-for="Input.Name" class="form-control" />
                                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div><div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Input.Gender" class="form-label">Gender</label>
                                        <input asp-for="Input.Gender" class="form-control" />
                                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Input.Nationality" class="form-label">Nationality</label>
                                        <input asp-for="Input.Nationality" class="form-control" />
                                        <span asp-validation-for="Input.Nationality" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Info Section -->
                        <div class="section-container">
                            <h5 class="section-title">Additional Information</h5>
                            <div class="row">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.MaritalStatus" class="form-label"></label>
                                            <select asp-for="Input.MaritalStatus" class="form-control">
                                                <option value="">Select Status</option>
                                                <option value="Single">Single</option>
                                                <option value="Married">Married</option>
                                            </select>
                                            <span asp-validation-for="Input.MaritalStatus" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.MothersNationality" class="form-label"></label>
                                            <input asp-for="Input.MothersNationality" class="form-control" />
                                            <span asp-validation-for="Input.MothersNationality" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Birth Information -->
                        <div class="section-container">
                            <h5 class="section-title">Birth Information</h5>
                            <div class="row">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.BirthDate" class="form-label">Date of Birth</label>
                                            <input asp-for="Input.BirthDate" class="form-control" type="date" />
                                            <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.PlaceOfBirth" class="form-label">Place of Birth</label>
                                            <input asp-for="Input.PlaceOfBirth" class="form-control" />
                                            <span asp-validation-for="Input.PlaceOfBirth" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Address -->
                        <div class="section-container">
                            <h5 class="section-title">Address Information</h5>
                            <div class="row">
                                <div class="row mb-3">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="Input.Address" class="form-label">Address</label>
                                            <textarea asp-for="Input.Address" class="form-control" rows="2"></textarea>
                                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Academic Information -->
                        <div class="section-container">
                            <h5 class="section-title">Academic Information</h5>
                            <div class="row">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Input.HighSchoolType" class="form-label"></label>
                                                <select asp-for="Input.HighSchoolType" class="form-select">
                                                    <option value="">Select Type</option>
                                                    <option value="Scientific">Scientific</option>
                                                    <option value="Literary">Literary</option>
                                                </select>
                                                <span asp-validation-for="Input.HighSchoolType" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-6">
                                            <div class="form-check custom-checkbox mt-4">
                                                <input asp-for="Input.IsPublicSchool" class="form-check-input" type="checkbox" />
                                                <label asp-for="Input.IsPublicSchool" class="form-check-label ps-2"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.Grade" class="form-label">High School Grade</label>
                                            <input asp-for="Input.Grade" class="form-control" type="number" step="0.01" />
                                            <span asp-validation-for="Input.Grade" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Input.HighSchoolGraduationYear" class="form-label">Graduation Year</label>
                                            <input asp-for="Input.HighSchoolGraduationYear" class="form-control" type="number" />
                                            <span asp-validation-for="Input.HighSchoolGraduationYear" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Test Scores Section -->
                        <div class="section-container">
                            <h5 class="section-title">Test Scores</h5>
                            <div class="row">
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Input.IELTS" class="form-label"></label>
                                            <input asp-for="Input.IELTS" class="form-control" type="number" step="0.5" />
                                            <span asp-validation-for="Input.IELTS" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Input.TOEFL" class="form-label"></label>
                                            <input asp-for="Input.TOEFL" class="form-control" type="number" />
                                            <span asp-validation-for="Input.TOEFL" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check custom-checkbox mt-4">
                                            <input asp-for="Input.HasAptitudeTest" class="form-check-input" type="checkbox" />
                                            <label asp-for="Input.HasAptitudeTest" class="form-check-label ps-2"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Submit Button -->
                        <div class="row">
                            <div class="col-12">
                                <button id="update-profile-button" type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        /* Section styling */
        .section-container {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            background-color: #ffffff;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 500;
            color: #495057;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e9ecef;
        }

        /* Custom Checkbox Styling (keep your existing checkbox styles) */
        .custom-checkbox {
            padding: 10px;
            border-radius: 6px;
            transition: background-color 0.2s;
        }
        /* Custom Checkbox Styling */
        .custom-checkbox {
            padding: 10px;
            border-radius: 6px;
            transition: background-color 0.2s;
        }

            .custom-checkbox:hover {
                background-color: rgba(13, 110, 253, 0.05);
            }

            .custom-checkbox .form-check-input {
                width: 1.2em;
                height: 1.2em;
                margin-top: 0.25em;
                cursor: pointer;
                border: 2px solid #dee2e6;
            }

                .custom-checkbox .form-check-input:checked {
                    background-color: #0d6efd;
                    border-color: #0d6efd;
                }

            .custom-checkbox .form-check-label {
                font-weight: 500;
                cursor: pointer;
                padding-left: 0.5rem;
                user-select: none;
            }

        /* Improve spacing and alignment */
        .form-check {
            display: flex;
            align-items: center;
            margin: 0.5rem 0;
        }

        .form-check-input {
            margin-right: 0.5rem;
        }
    </style>
}