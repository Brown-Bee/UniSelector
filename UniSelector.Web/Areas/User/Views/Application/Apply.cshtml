@model ApplicationVM

<div class="container" style="margin-top: 6rem;">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Submit Application</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Application.UniversityId" hidden />
                <input asp-for="Application.FacultyId" hidden />
                <input asp-for="Application.MajorId" hidden />
                <input asp-for="Application.UserId" hidden />
                <input asp-for="Application.ApplicationDate" hidden />
                <input asp-for="Application.Status" hidden />

                <!-- Application Information Display -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>University Details</h5>
                        <p><strong>University:</strong> @Model.Application.University?.Name</p>
                        <p><strong>Faculty:</strong> @Model.Application.Faculty?.StandardFaculty?.CombinedName</p>
                        <p><strong>Major:</strong> @Model.Application.Major?.StandardMajor?.CombinedName</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Application Status</h5>
                        <p><strong>Date:</strong> @Model.Application.ApplicationDate.ToString("dd/MM/yyyy")</p>
                        <p><strong>Status:</strong> @Model.Application.Status</p>
                    </div>
                </div>

                <!-- Document Upload Section -->
                <div class="row">
                    <!-- Civil ID Upload -->
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">Civil ID</h5>
                                <div class="mb-3">
                                    <input type="file" id="civilIdFile" name="CivilIdFile"
                                           class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Application.CivilIdPath))
                                {
                                    <div class="document-preview">
                                        <i class="bi bi-file-earmark-text"></i>
                                        <button type="button" onclick="deleteDocument(@Model.Application.Id, 'CivilId')"
                                                class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Passport Upload -->
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">Passport</h5>
                                <div class="mb-3">
                                    <input type="file" id="passportFile" name="PassportFile"
                                           class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Application.PassportPath))
                                {
                                    <div class="document-preview">
                                        <i class="bi bi-file-earmark-text"></i>
                                        <button type="button" onclick="deleteDocument(@Model.Application.Id, 'Passport')"
                                                class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- High School Certificate Upload -->
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">High School Certificate</h5>
                                <div class="mb-3">
                                    <input type="file" id="certificateFile" name="HighSchoolCertificateFile"
                                           class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Application.HighSchoolCertificatePath))
                                {
                                    <div class="document-preview">
                                        <i class="bi bi-file-earmark-text"></i>
                                        <button type="button" onclick="deleteDocument(@Model.Application.Id, 'Certificate')"
                                                class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="row">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary">Submit Application</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteDocument(applicationId, documentType) {
            if (confirm('Are you sure you want to delete this document?')) {
                $.ajax({
                    url: '@Url.Action("DeleteDocument")',
                    type: 'POST',
                    data: { applicationId, documentType },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to delete document');
                        }
                    },
                    error: function() {
                        alert('Error occurred while deleting document');
                    }
                });
            }
        }
    </script>
}