@model ApplicationVM

<div class="container" style="margin-top: 6rem;">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Submit Application</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
           <div asp-validation-summary="All" class="text-danger"></div>
            <form method="post" enctype="multipart/form-data">
                <!-- Hidden Fields -->
                <input asp-for="Application.UniversityId" hidden />
                <input asp-for="Application.FacultyId" hidden />
                <input asp-for="Application.UniEmail" hidden />
                <input asp-for="Application.MajorId" hidden />
                <input asp-for="Application.UserId" hidden />
                <input asp-for="Application.ApplicationDate" hidden />
                <input asp-for="Application.Response" hidden />

                <!-- University Details -->
                <div class="section-container">
                    <h5 class="section-title">University Details</h5>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="detail-card">
                                <div class="icon-wrapper">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">University</div>
                                    <div class="detail-value">@Model.universityName</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-card">
                                <div class="icon-wrapper">
                                    <i class="bi bi-book"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Faculty</div>
                                    <div class="detail-value">@Model.Application.Faculty?.StandardFaculty?.CombinedName</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-card">
                                <div class="icon-wrapper">
                                    <i class="bi bi-mortarboard"></i>
                                </div>
                                <div class="detail-content">
                                    <div class="detail-label">Major</div>
                                    <div class="detail-value">@Model.Application.Major?.StandardMajor?.CombinedName</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Personal Information -->
                <div class="section-container mb-4">
                    <h5 class="section-title">Personal Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApplicationUser.Name" class="form-label">Full Name</label>
                            <input asp-for="ApplicationUser.Name" readonly class="form-control" />
                            <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApplicationUser.CivilID" class="form-label">Civil ID</label>
                            <input asp-for="ApplicationUser.CivilID" readonly class="form-control" />
                            <span asp-validation-for="ApplicationUser.CivilID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApplicationUser.Gender" class="form-label">Gender</label>
                            <input asp-for="ApplicationUser.Gender" readonly class="form-select">
                                @* <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select> *@
                            <span asp-validation-for="ApplicationUser.Gender" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApplicationUser.Nationality" class="form-label">Nationality</label>
                            <input asp-for="ApplicationUser.Nationality" readonly class="form-control" />
                            <span asp-validation-for="ApplicationUser.Nationality" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApplicationUser.MothersNationality" class="form-label">Mother's Nationality</label>
                            <input asp-for="ApplicationUser.MothersNationality" readonly class="form-control" />
                            <span asp-validation-for="ApplicationUser.MothersNationality" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApplicationUser.BirthDate" class="form-label">Date of Birth</label>
                            <input asp-for="ApplicationUser.BirthDate" class="form-control" readonly type="date" />
                            <span asp-validation-for="ApplicationUser.BirthDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Academic Information -->
                <div class="section-container mb-4">
                    <h5 class="section-title">Academic Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApplicationUser.HighSchoolType" class="form-label">High School Path</label>
                            <input asp-for="ApplicationUser.HighSchoolType" readonly class="form-select">
                            <span asp-validation-for="ApplicationUser.HighSchoolType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ApplicationUser.Grade" class="form-label">High School Grade (%)</label>
                            <input asp-for="ApplicationUser.Grade" readonly class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="ApplicationUser.Grade" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="ApplicationUser.IELTS" class="form-label">IELTS Score</label>
                            <input asp-for="ApplicationUser.IELTS" readonly class="form-control" type="number" step="0.5" />
                            <span asp-validation-for="ApplicationUser.IELTS" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ApplicationUser.TOEFL" class="form-label">TOEFL Score</label>
                            <input asp-for="ApplicationUser.TOEFL" readonly class="form-control" type="number" />
                            <span asp-validation-for="ApplicationUser.TOEFL" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-check mt-4">
                                <input asp-for="ApplicationUser.HasAptitudeTest" readonly class="form-check-input" type="checkbox" />
                                <label asp-for="ApplicationUser.HasAptitudeTest" class="form-check-label">Has Aptitude Test</label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Document Upload Section -->
                <div class="section-container mb-4">
                    <h5 class="section-title">Required Documents</h5>
                    <div class="row">
                        <!-- Civil ID Upload -->
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title">Civil ID</h6>
                                    <div class="mb-3">
                                        <input type="file" id="civilIdFile" name="CivilIdFile" asp-for="CivilIdFile"
                                               class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                                        
                                    </div>
                                    <span asp-validation-for="CivilIdFile" class="text-danger"></span>
                                    
                                    @if (!string.IsNullOrEmpty(Model.Application.CivilIdPath))
                                    {
                                        <div class="document-preview">
                                            <span class="text-success"><i class="bi bi-check-circle"></i> Uploaded</span>
                                            <button type="button" onclick="deleteDocument(@Model.Application.Id, 'CivilId')"
                                                    class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <!-- Passport Upload -->
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title">Passport</h6>
                                    <div class="mb-3">
                                        <input type="file" id="passportFile" name="PassportFile" asp-for="PassportFile"
                                               class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                                    </div>
                                    <span asp-validation-for="PassportFile" class="text-danger"></span>
                                    
                                    @if (!string.IsNullOrEmpty(Model.Application.PassportPath))
                                    {
                                        <div class="document-preview">
                                            <span class="text-success"><i class="bi bi-check-circle"></i> Uploaded</span>
                                            <button type="button" onclick="deleteDocument(@Model.Application.Id, 'Passport')"
                                                    class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <!-- High School Certificate Upload -->
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title">High School Certificate</h6>
                                    <div class="mb-3">
                                        <input type="file" id="certificateFile" name="HighSchoolCertificateFile" asp-for="HighSchoolCertificateFile"
                                               class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                                    </div>
                                    <span asp-validation-for="HighSchoolCertificateFile" class="text-danger"></span>
                                    
                                    @if (!string.IsNullOrEmpty(Model.Application.HighSchoolCertificatePath))
                                    {
                                        <div class="document-preview">
                                            <span class="text-success"><i class="bi bi-check-circle"></i> Uploaded</span>
                                            <button type="button" onclick="deleteDocument(@Model.Application.Id, 'Certificate')"
                                                    class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row">
                    <div class="col-12 text-center">
                        @* <button type="submit" name="saveDraft" value="true" class="btn btn-secondary me-2">
                            <i class="bi bi-save"></i> Save as Draft
                        </button> *@
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Submit Application
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function deleteDocument(applicationId, documentType) {
            if (confirm('Are you sure you want to delete this document?')) {
                $.ajax({
                    url: '@Url.Action("DeleteDocument")',
                    type: 'POST',
                    data: { applicationId, documentType },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to delete document');
                        }
                    },
                    error: function () {
                        alert('Error occurred while deleting document');
                    }
                });
            }
        }
    </script>
}
