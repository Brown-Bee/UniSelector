@* to know the current controller and action in the view.*@
@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    bool isHomePage = currentController == "Home" && currentAction == "Index";
}
@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using UniSelector.Models
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniSelector</title>
    @await RenderSectionAsync("Styles", required: false)


    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
    @*<link rel="stylesheet" href="~/UniSelector.Web.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @*<link rel="stylesheet" href="/path/to/your/custom-datatable.css">*@
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Favicons -->
    <link href="~/Images/Logo3.png" rel="icon">
    <link href="~/Images/Logo2.jpg" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/css/main.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet"> <!-- Update DataTables CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


</head>
<body class="site-background">
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="header-container container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a asp-area="User" asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto me-xl-0">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <img src="~/Images/Logo3.png">
                <h1 class="sitename">UniSelector</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Manegement
                            </a>
                            <ul>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="UserManagement" asp-action="Index">Users Managment</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="University" asp-action="Index">Universities Managment</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="StandardFaculty" asp-action="Index">Standard Faculties Managment</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="StandardMajor" asp-action="Index">Standard Majors Managment</a>
                                </li>

                                @* <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Faculty" asp-action="Index">Faculties Managment</a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Major" asp-action="Index">Majors Managment</a>
                                </li> *@
                            </ul>
                        </li>
                    }
                    <li>
                        <a class="nav-link " asp-area="User" asp-controller="Home" asp-action="UniversityView">Universities</a>
                    </li>
                    @if (isHomePage)
                    {
                        <li>
                            <a asp-area="User" asp-controller="Home" asp-action="Index" class="active">Home</a>
                        </li>
                        <li>
                            <a href="#about">About</a>
                        </li>
                        <li>
                            <a href="#features">Features</a>
                        </li>
                        <li>
                            <a href="#services">Services</a>
                        </li>
                        <li>
                            <a href="#contact">Contact</a>
                        </li>
                    }


                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>
            @if (SignInManager.IsSignedIn(User))
            {
                var claimsIdentity = (ClaimsIdentity)User.Identity!;
                var userId = claimsIdentity.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                @(await Component.InvokeAsync("UserName", new { id = userId }))
            }
            else
            {
                <partial name="_LoginPartial"></partial>

            }
            @* <a class="btn-getstarted" asp-area="Identity" asp-page="/Account/Register">Get Started</a> *@

        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-4">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer id="footer" class="footer">
        <div class="container">
            <div class="row align-items-center py-4">
                <div class="col-12 text-center mb-4">
                    <a asp-area="User" asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center justify-content-center">
                        <span class="sitename">UniSelector</span>
                    </a>
                </div>

                <div class="col-12">
                    <div class="row justify-content-center text-center g-3">

                        <div class="col-auto mx-3">
                            <p class="mb-0">Hawally, Al Zahra</p>
                        </div>
                        <div class="col-auto mx-3">
                            <p class="mb-0"><strong>Phone:</strong> +965 5412 7874</p>
                        </div>
                        <div class="col-auto mx-3">
                            <p class="mb-0"><strong>Email:</strong> info@gmail.com</p>
                        </div>
                    </div>
                </div>

                <div class="col-12 text-center mt-4">
                    <div class="row justify-content-center g-3">
                        <div class="col-auto mx-2"><a asp-area="User" asp-controller="Home" asp-action="Index">Home</a></div>
                        <div class="col-auto mx-2"><a href="#">About us</a></div>
                        <div class="col-auto mx-2"><a href="#">Services</a></div>
                        <div class="col-auto mx-2"><a href="#">Terms of service</a></div>
                        <div class="col-auto mx-2"><a href="#">Privacy policy</a></div>
                    </div>
                </div>

                <div class="col-12 text-center mt-4">
                    <div class="social-links d-flex justify-content-center">
                        <a href="" class="mx-2"><i class="bi bi-twitter-x"></i></a>
                        <a href="" class="mx-2"><i class="bi bi-facebook"></i></a>
                        <a href="" class="mx-2"><i class="bi bi-instagram"></i></a>
                        <a href="" class="mx-2"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>

            <div class="copyright text-center mt-4 py-3 border-top">
                <p class="mb-0">© <span>Copyright</span> <strong class="px-1 sitename">UniSelector</strong> <span>All Rights Reserved</span></p>
                <div class="credits">
                    Designed by <a asp-area="User" asp-controller="Home" asp-action="Index">DevHero</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*
    <script src="~/js/site.js" asp-append-version="true"></script>
    *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script> <!-- Add DataTables Bootstrap 5 -->
    <script src="https://cdn.tiny.cloud/1/pwjhljvwri0pu4m73g7nhms7wuy729u9h8z50efbfr4iia0p/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script> <!-- Add Toastr -->


    <!-- Vendor JS Files -->
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>
    <script src="~/vendor/aos/aos.js"></script>
    <script src="~/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/vendor/purecounter/purecounter_vanilla.js"></script>

    <!-- Main JS File -->
    <script src="~/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    @await RenderSectionAsync("Scripts", false)
</body>
</html>