@model string
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using UniSelector.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="flex items-center gap-3">
    <div class="flex items-center gap-3">
        <form class="flex items-center " id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn-getstarted bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition duration-300">
                Logout
            </button>
            
            <a id="manage" class="text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                @Model
            </a>
        </form>
    </div>
</div>